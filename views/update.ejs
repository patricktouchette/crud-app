    <section class="videos">
        <% docs.forEach(function(doc) { %>
            <article class="video-thumb">
                <img src="<%= doc.poster %>" alt="movie-poster">
                <form action="/update" method="POST">
                    <input type="text" required value="<%= doc._id %>" name="_id" placeholder="_id">
                    <input type="text" required value="<%= doc.title %>" name="title" placeholder="title">
                    <input type="text" required value="<%= doc.year %>" name="year" placeholder="year">
                    <input type="text" required value="<%= doc.poster %>" name="poster" placeholder="Img URL">
                    <button class="submit">UPDATE</button>
                </form>
            </article>
        <% }) %>

    </section>

</main>



